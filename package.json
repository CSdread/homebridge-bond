{
  "name": "homebridge-bond",
  "version": "3.2.3",
  "description": "A homebridge plugin to control your Bond devices over the v2 API.",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts",
    "watch": "npm run build && npm link && nodemon",
    "dev": "tsc --watch & nodemon dist",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.spec.ts\" npm run test"
  },
  "keywords": [
    "homebridge-plugin",
    "bond",
    "bond-home",
    "rf",
    "ir"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/aarons22/homebridge-bond.git"
  },
  "bugs": {
    "url": "http://github.com/aarons22/homebridge-bond/issues"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">=1.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/flake-idgen": "^0.1.30",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.0.11",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.2.0",
    "homebridge": "^1.1.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "axios-retry": "^3.1.8",
    "biguint-format": "^1.0.2",
    "flake-idgen": "^1.4.0"
  },
  "homepage": "https://github.com/aarons22/homebridge-bond#readme",
  "author": "Aaron Sapp"
}